<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HermitDaveControls">

    <Style TargetType="local:AutoCompleteTextBlock">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:AutoCompleteTextBlock">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
                            <TextBox x:Name="tbChild" HorizontalAlignment="Stretch" />
                            <ListBox x:Name="lbChild" HorizontalAlignment="Stretch" ItemsSource="{TemplateBinding ItemsSource}" Visibility="Collapsed" Margin="-2, 0"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
